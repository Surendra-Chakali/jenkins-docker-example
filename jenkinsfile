pipeline {
    agent any
    environment{
        SonarHome= tool 'sonar'
    }
    stages {
        stage('Code-Compile') {
            steps {
               sh "mvn clean compile"
            }
        }
        
        stage('Code-Build') {
            steps {
               sh "mvn clean install"
            }
        }

         stage('Statis code analysis') {
            steps {
               sh '''   $SonarHome/bin/sonar -Dsonar.projectName=myTestProject \
                        -Dsonar.projectKey=myOwn '''
            }
        }
        
    }
}
