pipeline {
    agent any
    tools{
        maven 'maven'
    }
    stages {
        stage('Code-Compile') {
            steps {
               sh "mvn clean compile"
            }
        }
        stage('Code-Build') {
            steps {
               sh "mvn clean package"
            }
        }

        stage('Push to Docker'){
            environment{
                IMG = "surendra548/sampleJenkins:${BUILD_NUMBER}"
            }
            steps{
                script{
                    withDockerRegistry(credentialsId: 'dockerCreds'){
                        sh 'docker build -t ${IMG} .'
                        sh 'docker push ${IMG}'
                    }
                }
            }
        }
        
    }
}
