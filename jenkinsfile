pipeline {
    agent any
    environment{
        SonarHome= tool 'sonarqb'
    }
    stages {
        stage('Code-Compile') {
            steps {
               sh "mvn clean compile"
            }
        }
        
        stage('Code-Build') {
            steps {
               sh "mvn clean install"
            }
        }

         stage('Statis code analysis') {
            steps {
                withSonarQubeEnv('SonarQube') {
                    sh ''' $SonarHome/bin/sonar-scanner -Dsonar.projectName=Jenkins Docker \
                        -Dsonar.projectKey=Jenkins Docker '''
                }
               
            }
        }

        stage('Deploy to Docker'){
            steps{
                sh  ' docker build -t sampleproject:${BUILD_NUMBER} . '
            }
        }
        
    }
}
