pipeline {
    agent any
    environment{
        SonarHome= tool 'sonarqb'
    }
    stages {
        stage('Code-Compile') {
            steps {
               sh "mvn clean compile"
            }
        }
        
        stage('Code-Build') {
            steps {
               sh "mvn clean install"
            }
        }

         stage('Statis code analysis') {
            steps {
                withSonarQubeEnv('SonarQube') {
                    sh '''   $SonarHome/bin/sonar-scanner -Dsonar.projectName=myTestProject \
                        -Dsonar.projectKey=myTestProject \
                        -Dsonar.exclusions=**/*.java \
                        -X '''
                }
               
            }
        }

        stage('Deploy to Docker'){
            steps{
                sh  ''' docker build -t sampleproject:${BUILD_NUMBER} . \
                        docker run -d -p 8010:8080 --name testproj sampleproject:${BUILD_NUMBER}
                    '''
            }
        }
        
    }
}
